@model AddingIncident

<form method="post" asp-action="CreateIncidentPost">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Incident</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Incident.IncidentName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Incident.IncidentName" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Incident.IncidentName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Incident.IncidentDescription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Incident.IncidentDescription" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Incident.IncidentDescription" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Accounts"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Accounts" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Accounts" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}