@model AddingIncident

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Incidents List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Account" asp-action="CreateIncident" class="btn btn-primary">
                Create New Incident
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Incident != null)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Incident Name
                    </th>
                    <th>
                        Incident description
                    </th>
                    <th>
                        Accounts involed in Incident
                    </th>

                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td width="20%">@Model.Incident.IncidentName</td>
                    <td width="20%">@Model.Incident.IncidentDescription</td>
                    <td width="20%">@Model.Accounts</td>
                    <td class="text-center">
                        <div class="w-150 btn-group" role="group">
                            <a asp-controller="Account" asp-route-Id="@Model.Incident.IncidentName" asp-action="DeleteIncident" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
    }
    else
    {
        <p>No Incidents yet.</p>
    }
</div>





